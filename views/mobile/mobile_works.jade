extends ../mobile_layout
block content
    div.container
        div(style="margin-bottom:20px;margin-top:20px")
            script(src="/javascripts/pages/mobile_works.js")
            
            //form(class="bs-example bs-example-form" role="form")
            div(class="row")
                div(class="col-md-6")
                    div(class="row")
                        div(class="col-md-6" style="padding:0px")
                            input(id="keyworkInput" type="text" style="width:100%;height:35px" placeholder="输入作品名字")
                        div(class="col-md-1" style="padding:0px")
                            span(class="input-group-btn" style="margin-left:2px")
                                button(class="btn btn-default glyphicon glyphicon-search" type="button" id="searchWorkBtn") 搜索
            div#allWorks(style="margin-top:20px")
                
            nav(aria-label="Page navigation")
                ul(class="pagination" id="pageNavs")    
                    li(id="pageNavFirst")
                        a(href="#" aria-label="previous" )
                            span(aria-hidden="true") <<
                    li(id="pageNavLast")
                        a(href="#" aria-label="Next" )
                            span(aria-hidden="true") >>
    script.
        $('img').bind('error', function () {
            //$(this).hide();
            $(this).attr("src", "/images/6202.png");
        });
        var thumbnail404 = function (image) {
            image.setAttribute("src", "/images/6202.png");
        }

