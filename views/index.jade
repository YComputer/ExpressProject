    div(class='col-md-3' style="background:rgb(223,151,47);height:250px;text-align:center;font-size:30px;line-height:25pt;padding-top:15px;")
      p(style="color:rgb(255,255,255)") 角色控制类课程
      p(style="color:rgb(255,255,255);font-size:20px;") 学习坐标
      p(style="color:rgb(255,255,255);font-size:20px;")  循环控制
      p(style="color:rgb(255,255,255);font-size:20px;")  分支处理逻辑
    div(class='col-md-3' style="background:rgb(239,211,111);height:250px;text-align:center;font-size:30px;line-height:25pt;padding-top:15px;")
      p(style="color:rgb(255,255,255)") 游戏设计类课程
      p(style="color:rgb(255,255,255);font-size:20px;")  事件监听
      p(style="color:rgb(255,255,255);font-size:20px;")  广播消息
      p(style="color:rgb(255,255,255);font-size:20px;")  组件化
      p(style="color:rgb(255,255,255);font-size:20px;")  数据结构
    div(class='col-md-3' style="background:rgb(237,190,49);height:250px;text-align:center;font-size:30px;line-height:25pt;padding-top:15px;")
      p(style="color:rgb(255,255,255)") 学习类课程
      p(style="color:rgb(255,255,255);font-size:20px;")  算法模拟
    div(class='col-md-3' style="background:rgb(245,220,133);height:250px;text-align:center;font-size:30px;line-height:25pt;padding-top:15px;")
      p(style="color:rgb(255,255,255)") 软硬兼施的机器人课程
      p(style="color:rgb(255,255,255);font-size:20px;")  LEGO WEDO
    //- div(class='col-md-3' style="background:rgb(245,250,133);height:200px;text-align:center;font-size:30px;line-height:25pt;padding-top:15px;")
    
    div#vedioshow(class="modal" style=" display: none;width:1000px;margin-left:auto;margin-right:auto;text-align:center;")
            video(id='idforvideo' src="/video/promotion.mp4" controls="controls" style="float:left;height: 630px;" )
            img(src="/images/cross.svg" id="closevedio" style="float:left;width:100px" alt="image0" class="btn")
        div(class="modal-footer")
  script.
        $('#playvedio').on('click',  function () {
          $('#vedioshow').modal("show");
          var vv = document.getElementById("idforvideo");
          vv.play();
        })
        $('#closevedio').on('click',  function () {
          $('#vedioshow').modal("hide");
          var vv = document.getElementById("idforvideo");
          vv.pause();
        })