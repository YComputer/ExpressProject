      p(style="color:rgb(255,255,255);font-size:20px;") 学习坐标
      p(style="color:rgb(255,255,255);font-size:20px;")  循环控制
      p(style="color:rgb(255,255,255);font-size:20px;")  分支处理逻辑
    div(class='col-md-3' style="background:rgb(239,211,111);height:250px;text-align:center;font-size:30px;line-height:25pt;padding-top:15px;")
