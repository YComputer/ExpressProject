      p(style="color:rgb(255,255,255);font-size:20px;")  事件监听
      p(style="color:rgb(255,255,255);font-size:20px;")  广播消息
      p(style="color:rgb(255,255,255);font-size:20px;")  组件化
      p(style="color:rgb(255,255,255);font-size:20px;")  数据结构
    div(class='col-md-3' style="background:rgb(237,190,49);height:250px;text-align:center;font-size:30px;line-height:25pt;padding-top:15px;")
      p(style="color:rgb(255,255,255)") 学习类课程
      p(style="color:rgb(255,255,255);font-size:20px;")  算法模拟
