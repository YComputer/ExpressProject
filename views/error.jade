extends layout

block content
  div(style="padding-bottom:100px;background:rgb(249,250,250);text-align:center;font-size:20px;color:rgb(111,119,134)")
    - if(error.status=='404')
      div#errdiv404(style="margin-top:25px")
        img(class="img-responsive" src="/images/err.png" style="margin-left:auto;margin-right:auto") 
        p 亲，页面找不到了，先看看其他页面吧！
        a(href="/")
          button(class="btn") 去首页
    - else
      div#errdiv500(style="background:rgb(249,250,250);text-align:center")
        p 亲，页面出错了，先看看其他页面吧！
