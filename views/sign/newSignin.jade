html
    head
        meta( charset="UTF-8")
        link(rel='stylesheet' href="/stylesheets/bootstrap.css")
        link(rel='stylesheet' href="/stylesheets/mycss.css")
        link(rel='stylesheet' href="/stylesheets/bootstrap-theme.css")
        script(src="/javascripts/jquery-3.1.1.min.js")
        script(src="/javascripts/bootstrap.js")
        title 登录
    body
        div#signinDiv(style="position:absolute;top:50%;left:50%;width:700px;height:350px;margin-top:-200px;margin-left:-350px;background:#5a628a")
            script(src="/javascripts/pages/signin.js" type="text/javascript")
            div( action="/signin" method="post")
                div(class="col-md-8 col-md-offset-2" style="text-align:10px")
                    h4 账号登录
                    div(class="input-group")
                        span(id="signininfo" class="glyphicon glyphicon-remove" style="margin-bottom:10px;color:#ef4123;visibility:hidden") 用户名或密码错误
                    div(class="input-group input-group-lg" style="margin-top:5px;margin-bottom:1px")
                        span(class="input-group-addon glyphicon glyphicon-user" id="basic-addon1" )
                        input(type="text" id="loginname" class="form-control" placeholder="用户名或注册邮箱" aria-describedby="basic-addon1")
                    div(class="input-group input-group-lg" style="margin-top:1px;margin-bottom:5px")
                        span( class="input-group-addon glyphicon glyphicon-lock" id="basic-addon1")
                        input(type="text" id="pass" class="form-control" placeholder="密码" aria-describedby="basic-addon1")
                    a(href="/newsignup") 忘记密码
                    a(href="/newsignup" class="pull-right") 注册
                    div(class="input-group" style="width:100%;margin-top:5px;margin-bottom:5px")
                        input#submitsignin( type="btn" style="width:100%" class="btn" value="登录" aria-describedby="basic-addon1")
                    div.row(style="width:100%;margin-top:50px;margin-bottom:20px")
                        div(class="col-md-4 col-md-offset-1" )
                            a 第三方账号登录
                        div(class="col-md-2")
                            a
                                img(src="/images/QQ_icon.png" style="margin-top:-25px;width:80px;height:80px")
                        div(class="col-md-2")
                            a
                                img(src="/images/weixin_icon.png" style="margin-top:-25px;width:80px;height:80px")
                        div(class="col-md-2")
                            a
                                img(src="/images/weibo_icon.png" style="margin-top:-25px;width:80px;height:80px")
